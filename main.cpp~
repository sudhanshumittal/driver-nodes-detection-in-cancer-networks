int min(int a, int b){
	return a>b? b:a;
}
double Correlation(const vector<double>& x, const vector<double>& y)
{
	size_t n = min(x.size(), y.size());
	double ex(0), ey(0), sxx(0), syy(0), sxy(0);

	for (size_t i = 0; i < n; i++) { //Find the means.
			ex += x[i];
	  	ey += y[i];
	}
	ex /= n;
	ey /= n;
	for (size_t i = 0; i < n; i++) { //Compute the correlation coeï¬ƒcient.
	  	double xt = x[i] - ex;
	  	double yt = y[i] - ey;
		sxx += xt * xt;
		syy += yt * yt;
		sxy += xt * yt;
	}
	return sxy/(sqrt(sxx*syy)+TINY_VALUE);
}*/
